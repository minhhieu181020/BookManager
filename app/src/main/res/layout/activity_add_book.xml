<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/back2"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddBookActivity">
    <EditText
        android:id="@+id/edMaSach"
        android:layout_marginTop="10dp"
        android:background="#FF9933"
        android:hint="Ma Sach"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <Spinner

        android:id="@+id/spn"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
    <EditText
        android:id="@+id/edMaTheLoai"
        android:layout_marginTop="10dp"
        android:background="#FF9933"
        android:hint="Ma The Loai"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <EditText
        android:id="@+id/edTieuDe"
        android:layout_marginTop="10dp"
        android:background="#FF9933"
        android:hint="Ten Sach"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <EditText
        android:id="@+id/edTacgia"
        android:layout_marginTop="10dp"
        android:background="#FF9933"
        android:hint="Tac Gia"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <EditText
        android:id="@+id/edNXB"
        android:layout_marginTop="10dp"
        android:background="#FF9933"
        android:hint="Nha Xuat Ban"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <EditText
        android:id="@+id/edSoLuong"
        android:layout_marginTop="10dp"
        android:background="#FF9933"
        android:hint="So Luong"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <EditText
        android:id="@+id/edThanhTien"
        android:layout_marginTop="10dp"
        android:background="#FF9933"
        android:hint="Thanh Tien"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:onClick="addNewBook"
            android:id="@+id/btnAddBook"
            android:text="add"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
        <Button
            android:text="Cancel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <Button
        android:onClick="openListBook"
        android:text="Show Book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>